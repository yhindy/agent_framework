{
  "appId": "com.minion-laboratory.app",
  "productName": "Minion Laboratory",
  "directories": {
    "output": "dist"
  },
  "files": [
    "out/**/*"
  ],
  "extraResources": [
    {
      "from": "../minions",
      "to": "minions",
      "filter": ["!**/node_modules/**", "!**/.git/**"]
    }
  ],
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": ["dmg"]
  },
  "win": {
    "target": ["nsis"]
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Development"
  }
}

