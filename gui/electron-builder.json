{
  "appId": "com.minion-laboratory.app",
  "productName": "Minion Laboratory",
  "icon": "icon.png",
  "directories": {
    "output": "dist"
  },
  "files": [
    "out/**/*"
  ],
  "extraResources": [
    {
      "from": "resources/minions",
      "to": "minions",
      "filter": ["!**/node_modules/**", "!**/.git/**"]
    }
  ],
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": ["dmg"],
    "icon": "icon.icns"
  },
  "win": {
    "target": ["nsis"],
    "icon": "icon.ico"
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Development",
    "icon": "icon.png"
  }
}

